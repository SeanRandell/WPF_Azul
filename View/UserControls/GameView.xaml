<UserControl
    x:Class="WPF_Azul.View.UserControls.GameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WPF_Azul.View.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Azul.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:WPF_Azul.ViewModel"
    d:DesignHeight="1000"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    >
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>

        <!--  Main Menu Button  -->
        <Grid Grid.Row="0">
            <StackPanel
                Margin="0,25,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                >
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Game View"
                    />
                <Button
                    Margin="2"
                    Command="{Binding MainMenuCommand}"
                    Content="Main Menu"
                    />
            </StackPanel>
        </Grid>

        <!--  Grid Setup  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3.5*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3.5*" />
            </Grid.ColumnDefinitions>

            <!--  Grid Section Labels  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Player 1"
                />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="Factories"
                />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Text="Center Factory"
                />
            <TextBlock
                Grid.Row="0"
                Grid.Column="3"
                Text="Player 2"
                />

            <!--  Player 1 Grid Layout  -->
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="250" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="4.5*" />
                    <ColumnDefinition Width="4.5*" />
                </Grid.ColumnDefinitions>

                <!--  Player 1 selection Tiles  -->
                <ItemsControl
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,20,0,0"
                    ItemsSource="{Binding ValidProductionTilesPlayer1}"
                    >

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!--<ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>-->
                            <local:ValidProductionTileIndicator
                                Margin="1"
                                Cursor="Hand"
                                ProductionLineCommandClick="{Binding DataContext.ProductionLineClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                ValidProductionLine="{Binding}"
                                Visibility="{Binding IsEnabled, Converter={StaticResource booleanToVisibilityConverter}, Mode=Twoway}"
                                />
                            <!--</DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>-->
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>

                <!--  Player 1 Production Tiles with nullable test  -->
                <ItemsControl
                    Grid.Row="0"
                    Grid.Column="1"
                    ItemsSource="{Binding ProductionTilesPlayer1}"
                    >

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Width="210"
                                Height="210"
                                Columns="1"
                                />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid
                                            HorizontalAlignment="Right"
                                            FlowDirection="RightToLeft"
                                            Rows="1"
                                            />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:TileSlot />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>

                <ItemsControl
                    Grid.Row="0"
                    Grid.Column="1"
                    ItemsSource="{Binding ProductionTilesPlayer1}"
                    >

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Width="210"
                                Height="210"
                                Columns="1"
                                />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid
                                            HorizontalAlignment="Right"
                                            FlowDirection="RightToLeft"
                                            Rows="1"
                                            />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:TileView TileColour="{Binding TileTypeColour}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>

                <!--  Player 1 Wall Tiles  -->
                <ItemsControl
                    Grid.Row="0"
                    Grid.Column="2"
                    ItemsSource="{Binding WallPattern}"
                    >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Width="210"
                                Height="210"
                                HorizontalAlignment="Center"
                                Columns="1"
                                />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:WallTileSlot BackgroundColour="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl
                    Grid.Row="0"
                    Grid.Column="1"
                    ItemsSource="{Binding WallTilesPlayer1}"
                    >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Width="210"
                                Height="210"
                                HorizontalAlignment="Center"
                                Columns="1"
                                />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:TileView TileColour="{Binding TileTypeColour}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!--  Player 1 - Dropped Tiles Slots  -->
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text=" Player Dropped Tiles"
                    />

                <!--  Player 1 Dropped Tiles selection Tiles  -->
                <local:ValidProductionTileIndicator
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,20,0,0"
                    Cursor="Hand"
                    ProductionLineCommandClick="{Binding DataContext.ProductionLineClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    ValidProductionLine="{Binding ActivatedDroppedPlayer1Tiles}"
                    Visibility="{Binding ActivatedDroppedPlayer1Tiles.IsEnabled, Converter={StaticResource booleanToVisibilityConverter}, Mode=Twoway}"
                    />

                <ItemsControl
                    Grid.Row="1"
                    Grid.Column="1"
                    ItemsSource="{Binding DroppedTilesPlayer1}"
                    >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="5" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:TileSlot />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Player 1 - Dropped Tiles  -->
                <ItemsControl
                    Grid.Row="1"
                    Grid.Column="1"
                    ItemsSource="{Binding DroppedTilesPlayer1}"
                    >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="5" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:TileView TileColour="{Binding TileTypeColour}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Grid>

            <!--  Factory View  -->
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding Factories}"
                >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:FactoryView FactoryObject="{Binding}" FactoryTileClickCommand="{Binding DataContext.FactoryTileClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel MaxHeight="500" Margin="5" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!--  Undo Factory Click Button  -->
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Content="Command Test"
                >
                <Button.InputBindings>
                    <MouseBinding Command="{Binding UndoFactoryTileClick}" Gesture="leftClick" />
                </Button.InputBindings>
            </Button>

            <!--  Center Factory view  -->

            <ItemsControl
                Grid.Row="0"
                Grid.Column="2"
                Margin="5"
                ItemsSource="{Binding CenterFactoryTiles}"
                >

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Margin="5" Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:TileView
                            Cursor="Hand"
                            FactoryTileClickCommand="{Binding DataContext.FactoryTileClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            TileColour="{Binding TileTypeColour}"
                            TileObject="{Binding}"
                            />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>


            </ItemsControl>
            <!--  Player 2 Wall Pattern View  -->
            <!--  Player 2 Wall Tiles  -->
            <!--  Player 2 Production Tiles  -->
            <!--  Player 2 Dropped Tiles  -->

            <!--  Debug Tile Collection Text  -->
            <StackPanel Grid.Row="4" Grid.Column="0">
                <TextBlock Text="{Binding DebugTileBagText}" />
                <TextBlock Text="{Binding DebugTileBinText}" />
            </StackPanel>
        </Grid>


    </Grid>
</UserControl>
