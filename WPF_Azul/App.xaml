<Application
    x:Class="WPF_Azul.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WPF_Azul.View.Converters"
    xmlns:local="clr-namespace:WPF_Azul"
    >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Styles/ConverterDictionary.xaml" />
                <ResourceDictionary Source="View/Styles/BorderStyles.xaml" />
                <ResourceDictionary Source="View/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="View/Styles/TextBlockStyles.xaml" />
                <ResourceDictionary Source="View/Styles/TextBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
