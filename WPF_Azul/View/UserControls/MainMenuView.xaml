<UserControl
    x:Class="WPF_Azul.View.UserControls.MainMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Azul.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <Grid>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="Main Menu"
            />

        <custom:Modal
            x:Name="Modal"
            Panel.ZIndex="2"
            IsOpen="{Binding IsPlayerNameModalOpen}"
            >
            <!--  TODO: include Grid.RowSpan="3" if modal is not stretching across multiple rows  -->
            <Grid Width="300" Height="300">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Player 1 Name:" />
                    <!--  Player Input  -->
                    <TextBox
                        x:Name="Player1NameTextBox"
                        Width="220"
                        HorizontalAlignment="Center" 
                        BorderBrush="DarkGray"
                        BorderThickness="4"
                        CharacterCasing="Upper"
                        FontSize="48"
                        FontWeight="Bold"
                        MaxLength="5"
                        Text="{Binding Player1Name, Mode=OneWayToSource}"
                        />
                    <TextBlock Text="Player 2 Name:" />
                    <TextBox
                        x:Name="Player2NameTextBox"
                        Width="220"
                        HorizontalAlignment="Center"
                        BorderBrush="DarkGray"
                        BorderThickness="4"
                        CharacterCasing="Upper"
                        FontSize="48"
                        FontWeight="Bold"
                        MaxLength="5"
                        Text="{Binding Player2Name, Mode=OneWayToSource}"
                        />
                    <Button
                        x:Name="btnCloseModal"
                        Margin="2"
                        Command="{Binding SubmitPlayerNamesCommand}"
                        Content="Confirm"
                        />
                </StackPanel>
            </Grid>
        </custom:Modal>

        <StackPanel
            Margin="0,25,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Button
                Margin="2"
                Command="{Binding StartGameCommand}"
                Content="Start"
                />
            <!--<Button
                x:Name="btnShowModal"
                Margin="2"
                Click="OnShowModalClick"
                Content="Open Modal"
                />-->
            <Button
                Margin="2"
                Command="{Binding QuitCommand}"
                Content="Quit"
                />
        </StackPanel>
    </Grid>
</UserControl>
