<UserControl
    x:Class="WPF_Azul.View.UserControls.WallTileSlot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Azul.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="50"
    mc:Ignorable="d"
    >
    <Border
        x:Name="WallTileSlotUI"
        BorderBrush="Black"
        BorderThickness="1"
        CornerRadius="5"
        >
        <Border.Background>
            <ImageBrush ImageSource="{Binding Path=BackgroundColour, TargetNullValue={x:Null}, Converter={StaticResource tileTypeToWallTileSlotConverter}, Mode=Twoway}" Opacity="0.35" />
        </Border.Background>
        <Grid />
    </Border>
</UserControl>
